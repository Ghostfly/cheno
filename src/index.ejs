<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1, user-scalable=yes">

    <!-- {{SSRHead}} -->

    <base href="/">
    
    <meta name="theme-color" content="#002FA7">

    <link rel="manifest" href="<%= htmlWebpackPlugin.options.pathname %>/assets/manifest.json">
    <link rel="shortcut icon" href="<%= htmlWebpackPlugin.options.pathname %>/favicon.ico">
    <link rel="preconnect" href="https://base.cheno.fr">
    <link rel="stylesheet" type="text/css" href="<%= htmlWebpackPlugin.options.pathname %>/assets/style.css">
  </head>
  <body>
    <elara-app></elara-app>
    <noscript>JavaScript is needed to use this website.</noscript>
    <script src="<%= htmlWebpackPlugin.options.pathname %>/boot.js"></script>
    <script src="<%= htmlWebpackPlugin.options.pathname %>/vendor/webcomponents-loader.js" defer></script>
    <script src="<%= htmlWebpackPlugin.options.pathname %>/vendor/web-animations-next-lite.min.js" defer></script>
    <script src="<%= htmlWebpackPlugin.options.pathname %>/vendor/custom-elements-es5-adapter.js" defer></script>
    <script src="https://browser.sentry-cdn.com/5.10.2/bundle.min.js" integrity="sha384-ssBfXiBvlVC7bdA/VX03S88B5MwXQWdnpJRbUYFPgswlOBwETwTp6F3SMUNpo9M9" crossorigin="anonymous"></script>
    <script>
    // @ts-check
    const userAgent = window.navigator.userAgent.toLowerCase();
    const oldEdge = userAgent.indexOf("edge") !== -1
    
    if(oldEdge){
      throw new Error('Please upgrade your browser.');
    }

    // @ts-ignore
    WebFontConfig = {
      'google': { 'families': [ 
        'Andika:400,700',
        'Comfortaa:400,700',
        'Material+Icons&display=swap'
        ] }
    };
    
    const loadGFonts = function(){
      const wf = document.createElement('script');
      wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
      wf.type = 'text/javascript';
      wf.async = true;
      const s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(wf, s);
    };

    window.addEventListener('load', async () => {
      loadGFonts();

      if(location.host !== 'localhost:3000'){
        // @ts-ignore
        Sentry.init({ 'dsn': 'https://8b03983c61b541c780aacedeb557fafe@sentry.io/1866364' });
      }

      if ('serviceWorker' in navigator) {
        const registrations = await navigator.serviceWorker.getRegistrations();
        for(let registration of registrations) {  
            const unregistered = await registration.unregister();
            if(unregistered){
              location.reload();
            }
        }
      }
    });
    </script>
  </body>
</html>